<div class="flash-padding"></div>
<div class="stu-new-wrapper">
    <h2>生徒新規作成</h2>
    <div class="stu-new-form">
        <%= form_for @student do |f| %>
            <div class="form-group">
                <%= f.label :nickname, "ユーザーネーム" %>
                <%= f.text_field :nickname, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :full_name, "フルネーム" %>
                <%= f.text_field :full_name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :teacher_id, "あなたの先生" %>
                <%= f.collection_select :teacher_id, Teacher.all, :id, :full_name %>
            </div>
            
            <div class="form-group">
                <%= f.label :password, "パスワード" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "パスワード（確認用）" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :high_school, "現在または卒業した高校名" %>
                <%= f.text_field :high_school, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :university, "志望校" %>
                <%= f.text_field :university, class: "form-control" %>
            </div>
            <%= f.submit "新規登録", class: "btn btn-outline-primary" %>
        <% end %>
    </div>
</div>
